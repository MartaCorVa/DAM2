<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id="@+id/botoObrirWeb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/obrirWeb"
        />

    <Button
        android:id="@+id/botoMapa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/botoObrirWeb"
        android:text="@string/mapa"
        />

    <Button
        android:id="@+id/botoContactes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/botoMapa"
        android:text="@string/contactes"
        />

    <Button
        android:id="@+id/botoCrida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/botoContactes"
        android:text="@string/crida"
        />

</RelativeLayout>